<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#393737</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeWithoutBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="BottomNavigationViewProfile" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BottomNavigationViewProfile.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

</resources>